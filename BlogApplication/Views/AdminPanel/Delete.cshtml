@model BlogApplication.Areas.Identity.Data.ApplicationUser

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Deleting account...</h1>

<h5 class="text-center">Are you sure you want to delete this user?</h5>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NormalizedEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NormalizedEmail)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type='hidden' asp-for="Id" />
        <input type="submit" value="Yes, I am sure" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to blog</a>
    </form>
</div>
