@model IEnumerable<BlogApplication.Models.PostModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Posts</h1>

<p>
    <a asp-action="Create" class=" btn btn-primary btn-block">Create new Post</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostContext)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostContext)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PostId" class="btn btn-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.PostId" class="btn btn-secondary ">Details</a>
                <a asp-action="Delete" asp-route-id="@item.PostId" class="btn btn-danger ">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
